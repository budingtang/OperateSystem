<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/20" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="slime.os.controller.CreateFileController" >
            <Label text="新建文件"/>
            <GridPane hgap="10.0" vgap="10.0">
                <Label text="名称:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                <Label text="类型:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <ChoiceBox fx:id="fileTypeChoiceBox" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                <Label text="内容:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextArea fx:id="textArea" GridPane.rowIndex="3" GridPane.columnIndex="0" GridPane.columnSpan="2"/>
            </GridPane>

</VBox>
